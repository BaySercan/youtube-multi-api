# Required for OpenRouter API access (transcript AI cleaning)
OPENROUTER_API_KEY=

# Required for OpenAI Whisper API (speech-to-text fallback when YouTube captions unavailable)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Node environment (development or production)
NODE_ENV=development

# Server port
PORT=3500

# Enable/disable cookies for yt-dlp (default: true)
# Set to 'false' to disable cookies when experiencing 403 errors
USE_COOKIES=true

# JWT configuration
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# if supabase is used, provide the following
# otherwise, remove these lines
# or set them to empty strings
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-anon-key
